<!DOCTYPE html>
<html>
    <head>
        <title>User List</title>
        <link rel="stylesheet" href="/list-style.css">
    </head>
    <body>
        <div class="container">
            <a href="/user/new" class="add-user-btn">Add User</a> <!-- Button for adding new user -->
            <h1>User List</h1>
            <table>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Email</th>
                    <th class="actions">Actions</th>
                </tr>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.age %></td>
                        <td><%= user.email %></td>

                        <td class="actions">
                            <a href="/user/<%= user.id %>/edit">Edit</a>  <!--It will open edit-user page -->
                            
                            <form action="/user/<%= user.id %>?_method=DELETE" method="post">  <!--Delete method is written in app.js-->
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>

            </table>
        </div>
    </body>
</html>

